<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Redirigir todo a index.php si no es un archivo o directorio real
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

# Mantener handler PHP de cPanel
<IfModule mod_mime.c>
    AddType application/x-httpd-ea-php81 .php .phtml .php8
</IfModule>

<IfModule mime_module>
    AddHandler application/x-httpd-ea-php81___lsphp .php .php8 .phtml
</IfModule>
# --- overrides para uploads grandes (lsapi) ---
php_value upload_max_filesize 32M
php_value post_max_size 48M
php_value memory_limit 256M
php_value max_execution_time 120
php_value max_input_time 120
# --- fin overrides ---
